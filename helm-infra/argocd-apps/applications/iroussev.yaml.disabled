apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: iroussev
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "4"
spec:
  project: default
  source:
    repoURL: https://github.com/ivanroussev/iroussev
    targetRevision: main
    path: helm-infra/applications/iroussevcom
    helm:
      valueFiles:
        - values.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true